<odoo>
    <!-- Action for the sync log list -->
    <record id="action_warehouse_sync_log" model="ir.actions.act_window">
        <field name="name">SyncVision Logs</field>
        <field name="res_model">warehouse.sync.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sync logs found. Run a sync to see logs here.
            </p>
        </field>
    </record>

    <!-- Main Warehouse menu -->
    <menuitem id="menu_warehouse_sync_root" 
            name="SyncVision"
            web_icon="warehouse_sync_module/static/description/icon.png"
            sequence="25"
            />

